<h2>Complaint Details</h2>

<table border="1" cellpadding="8" cellspacing="0">

  <tr>
    <th>ID</th><td><%= complaint.id %></td>
  </tr>

  <tr>
    <th>Tracking ID</th><td><%= complaint.tracking_id %></td>
  </tr>
  <tr>
    <th>Name</th><td><%= complaint.name %></td>
  </tr>
  <tr>
    <th>Project</th><td><%= complaint.project || '—' %></td>
  </tr>
  <tr>
    <th>Created At</th>
    <td>
      <%= complaint.created_at.toISOString().slice(0, 19).replace('T', ' ') %>
    </td>
  </tr>
  <tr>
    <th>Status</th>
    <td><%= complaint.status || '—' %></td>
  </tr>
  <tr>
    <th>Follow-Up</th>
    <td><%= complaint.follow_up || '—' %></td>
  </tr>
  <tr>

    <td colspan="2">
      <% if (response) { %>
        <strong>Your Submitted Response:</strong><br>
        <div style="padding: 0.5rem; background: #f5f5f5; border: 1px solid #ccc;">
          <%= response.response_text %>
        </div>
      <% } else { %>
        <form action="/respond" method="POST">
          <input type="hidden" name="complaint_id" value="<%= complaint.id %>" />
          <textarea
            name="response_text"
            required
            placeholder="Enter your response"
            rows="2"
            cols="60"
          ></textarea><br />
          <button type="submit">Submit Response</button>
        </form>
      <% } %>
    </td>

  </tr>
</table>

<br />

<a href="/dashboard">← Back to Dashboard</a>
