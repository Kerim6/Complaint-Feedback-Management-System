<h2>All Users</h2>
  <a href="/users/new">➕ Create New User</a>
  <table border="1" cellpadding="5" cellspacing="0">
    <tr>
      <th>ID</th><th>Username</th><th>Email</th><th>Role</th><th>Created At</th><th>Actions</th>
    </tr>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.created_at.toISOString().slice(0, 19).replace('T', ' ') %></td>
        <td>
          <form action="/users/<%= user.id %>/delete" method="POST" onsubmit="return confirm('Are you sure?')">
            <button type="submit">🗑 Delete</button>
          </form>
          <form action="/users/<%= user.id %>/edit" method="GET" style="margin-top:5px;">
            <button type="submit">✏ Edit</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>
